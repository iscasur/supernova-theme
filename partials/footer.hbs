<footer class="footer is-centered">
    <div class="container">
        <div class="columns">
            <div class="column">
                {{#get "posts" limit="5"}}
                <section class="recent-post">
                    <h3>Recent Post</h3>
                    <ul>
                        {{#foreach posts}}
                        <li>
                            <a href="{{url}}">{{title}}</a>
                        </li>
                        {{/foreach}}
                    </ul>
                </section>
                {{/get}}
            </div>
            <div class="column">
                {{#get "tags" limit="all" as |tag|}}
                <section class="recent-post">
                    <h3>Tags</h3>
                    <ul>
                        {{#foreach tag}}
                        <li>
                            <a href="{{url}}">{{name}}</a>
                        </li>
                        {{/foreach}}
                    </ul>
                </section>
                {{/get}}
            </div>
        </div>
    </div>
</footer>